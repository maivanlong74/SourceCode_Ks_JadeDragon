@model IEnumerable<Jade_Dragon.Models.BinhLuan>

@{
    ViewBag.Title = "PhanHoiManage";
    Layout = "~/Areas/Admin/Views/Shared/LayoutManage.cshtml";
}

<script src="~/Areas/Admin/Public/js/dataTables_min.js"></script>
<link href="~/Areas/Admin/Public/css/Table.css" rel="stylesheet" />
<div class="home">
    <div class="body">
        <table id="example" class="display">
            <thead>
                <tr>
                    <th style="text-align: center;">Ảnh</th>
                    <th style="text-align: center; width: 200.938px;">Họ Tên Khách Hàng</th>
                    <th style="text-align: center;">Nội Dung</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <h1>Không có bình luận</h1>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        if (item.MaNguoiDung != null)
                        {
                            <tr>
                                <td style="text-align: center;">
                                    <img src="~/UpLoad_Img/KhachHang/@item.NguoiDung.Avt" alt="" style="
                                                                    width: 100px;
                                                                    height: 100px;
                                                                    border-radius: 50px;">
                                </td>
                                <td style="text-align: center;"> @item.NguoiDung.HoTen </td>
                                <td>@item.NoiDung</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td style="text-align: center;">
                                    <img src="~/Style/img/icon/icon-user.jpg" alt="" style="
                                                                    width: 100px;
                                                                    height: 100px;
                                                                    border-radius: 50px;
                                                                    background-color: wheat;">
                                </td>
                                <td style="text-align: center;">
                                    <a style="color:wheat;">Tài khoản đã xóa</a>
                                </td>
                                <td>@item.NoiDung</td>
                            </tr>
                        }
                    }
                }

            </tbody>
            <tfoot>
                <tr>
                    <th style="text-align: center;">Ảnh</th>
                    <th style="text-align: center;">Họ Tên Khách Hàng</th>
                    <th style="text-align: center;">Nội Dung</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script>$(document).ready(function () {
        $('#example').DataTable();
    });</script>

